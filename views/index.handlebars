<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <title>Workout Tracker</title>
  </head>
  <body>
    <header>
      <h1>Workout Tracker</h1>
    </header>
    <div id="createNewExcRecord">
      <form id="newExerciseForm" action="/new" method="POST">
        Exercise: <input type="text" name="exercise">
        Reps: <input type="number" min="0" name="reps">
        Weight: <input type="number" min="0" name="weight">
        Units: <input type="text" name="units" 
          value="Enter 1 for lbs, 0 for kg.">
        Date: <input type="text" name="date"
          value="YYYY-MM-DD">
        <input type="submit" name="submitNewRecord">
      </form>
    </div>
    <div >
      <table>
        <thead>
          <tr>
            <th>Exercise</th>
            <th>Reps</th>
            <th>Weight</th>
            <th>Units</th>
            <th>Date</th>
            <th></th><th></th>
          </tr>
        </thead>
        <tbody id="exerciseRecords">
        </tbody>
      </table>
    </div>
    <footer>
    </footer>
    <script src="js/script.js" type="text/javascript"></script>
  </body>
</html>

